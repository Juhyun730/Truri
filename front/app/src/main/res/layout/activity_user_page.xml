<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="35dp"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:letterSpacing="0"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="로그아웃"
                    android:textColor="#888888"
                    android:textSize="13dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bookmark_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/baseline_bookmark_24" />

                <TextView
                    android:id="@+id/bookmark_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/bookmark"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="북마크"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/bookmark_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookmark_content1"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:includeFontPadding="false"
                    android:text="title" />

                <TextView
                    android:id="@+id/bookmark_content2"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:includeFontPadding="false"
                    android:text="title" />

                <TextView
                    android:id="@+id/bookmark_content3"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:includeFontPadding="false"
                    android:text="title" />

                <TextView
                    android:id="@+id/bookmark_content4"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:includeFontPadding="false"
                    android:text="title" />

                <TextView
                    android:id="@+id/bookmark_content5"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="title" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/review_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/baseline_bookmark_24" />

                <TextView
                    android:id="@+id/review_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/review"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="리뷰 신뢰도 평가"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/review_content1"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="리뷰" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp">

                    <ImageView
                        android:id="@+id/review_content1_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp" />

                    <TextView
                        android:id="@+id/review_content1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/review_content1_circle"
                        android:includeFontPadding="false"
                        android:text="리뷰 내용"
                        style="@style/userInfo_review"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/review_content2"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="리뷰" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp">

                    <ImageView
                        android:id="@+id/review_content2_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/review_content2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/review_content2_circle"
                        android:includeFontPadding="false"
                        android:text="리뷰 내용"
                        style="@style/userInfo_review"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/review_content3"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="리뷰" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp">

                    <ImageView
                        android:id="@+id/review_content3_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/review_content3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/review_content3_circle"
                        android:includeFontPadding="false"
                        android:text="리뷰 내용"
                        style="@style/userInfo_review"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/review_content4"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="리뷰" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp">

                    <ImageView
                        android:id="@+id/review_content4_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/review_content4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/review_content4_circle"
                        android:includeFontPadding="false"
                        android:text="리뷰 내용"
                        style="@style/userInfo_review"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/review_content5"
                    style="@style/userInfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:includeFontPadding="false"
                    android:text="리뷰" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp">

                    <ImageView
                        android:id="@+id/review_content5_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/review_content5_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/review_content5_circle"
                        android:includeFontPadding="false"
                        android:text="리뷰 내용"
                        style="@style/userInfo_review"/>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

