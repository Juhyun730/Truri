<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Truri" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_color</item>
        <item name="colorSecondaryVariant">@color/main_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="history_list" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="btn_text" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="userInfo_title">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="userInfo_review">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="search_image">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>

    <style name="btn_grade">
        <item name="fontFamily">@font/notosanskr_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="gradePage_title">
        <item name="fontFamily">@font/notosanskr_medium</item>
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="grade_next_btn">
        <item name="fontFamily">@font/notosanskr_medium</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>



</resources>